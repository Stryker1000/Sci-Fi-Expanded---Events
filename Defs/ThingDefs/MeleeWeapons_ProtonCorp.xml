<defs>

    <!-- Gen 1 Proton Corp Weapons -->
    
    <!-- Plasma Sword -->

    <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
        <defName>MeleeWeapon_ProtonPlasmaSwordGen1</defName>
        <label>Plasma Sword Generation 1</label>
        <description>A sword created by the Proton Corp. The sword seems to radiate heat, cutting through simple armor as though it's nothing, though it still seems somewhat rudimentary and higher tiers of armor would deflect it easily.</description>
        <possessionCount>1</possessionCount>
        <graphicData>
          <texPath>Things/Item/Equipment/WeaponMelee/Gladius</texPath>
          <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <uiIconScale>1.2</uiIconScale>
        <techLevel>Industrial</techLevel>
        <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
        <weaponTags>
          <li>IndustrialMeleeDecent</li>
        </weaponTags>
        <statBases>
          <WorkToMake>20000</WorkToMake>
          <Mass>1</Mass>
        </statBases>
        <relicChance>2</relicChance>
        <equippedAngleOffset>-65</equippedAngleOffset>
        <costList>
            <Steel>50</Steel>
            <ComponentIndustrial>6</ComponentIndustrial>
            <ComponentSpacer>1</ComponentSpacer>
        </costList>
        <tools>
          <li>
            <label>handle</label>
            <capacities>
              <li>Blunt</li>
            </capacities>
            <power>9</power>
            <cooldownTime>2</cooldownTime>
          </li>
          <li>
            <label>point</label>
            <capacities>
              <li>Stab</li>
              <li>Burn</li>
            </capacities>
            <power>18</power>
            <armorPenetration>0.60</armorPenetration>
            <cooldownTime>2</cooldownTime>
          </li>
          <li>
            <label>edge</label>
            <capacities>
              <li>Cut</li>
              <li>Burn</li>
            </capacities>
            <power>18</power>
            <armorPenetration>0.60</armorPenetration>
            <cooldownTime>2</cooldownTime>
          </li>
        </tools>
        <recipeMaker>
          <researchPrerequisite>ProtonMeleeGen1</researchPrerequisite>
          <skillRequirements>
            <recipeUsers>
                <li>Machining Table</li>
                <li>Fabrication Bench</li>
              </recipeUsers>
            <Crafting>6</Crafting>
          </skillRequirements>
          <displayPriority>410</displayPriority>
        </recipeMaker>
      </ThingDef>
    
