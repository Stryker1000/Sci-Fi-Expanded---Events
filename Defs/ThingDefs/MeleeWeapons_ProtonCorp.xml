<Defs>

    <!-- Gen 1 Proton Corp Weapons -->
    
    <!-- Plasma Sword -->

    <ThingDef ParentName="BasePlasmaMeleeWeapon">
        <defName>MeleeWeapon_ProtonPlasmaSwordGenOne</defName>
        <label>Plasma Sword</label>
        <description>A sword created by the Proton Corp. The sword seems to radiate heat, cutting through simple armor as though it's nothing, though it still seems somewhat rudimentary and higher tiers of armor would deflect it easily.</description>
        <possessionCount>1</possessionCount>
        <graphicData>
          <texPath>Things/Item/Equipment/WeaponMelee/Gladius</texPath>
          <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <uiIconScale>1.2</uiIconScale>
        <techLevel>Industrial</techLevel>
        <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
        <weaponTags>
          <li>MeleeSharp</li>
          <li>PlasmaSwordGenOne</li>
          <li>PlasmaWeapon</li>
        </weaponTags>
        <statBases>
          <WorkToMake>20000</WorkToMake>
          <Mass>1</Mass>
        </statBases>
        <relicChance>2</relicChance>
        <equippedAngleOffset>-65</equippedAngleOffset>
        <costList>
            <Steel>50</Steel>
            <ComponentIndustrial>6</ComponentIndustrial>
            <ComponentSpacer>1</ComponentSpacer>
        </costList>
        <tools>
          <li>
            <label>handle</label>
            <capacities>
              <li>Blunt</li>
            </capacities>
            <power>9</power>
            <cooldownTime>2</cooldownTime>
          </li>
          <li>
            <label>point</label>
            <capacities>
              <li>Stab</li>
            </capacities>
            <power>18</power>
            <armorPenetration>0.60</armorPenetration>
            <cooldownTime>2</cooldownTime>
            <extraMeleeDamages>
                <li>
                <def>Flame</def>
                <amount>18</amount>
                <chance>0.6</chance> <!-- May need to change chance and damage value -->
                </li>
            </extraMeleeDamages>
          </li>
          <li>
            <label>edge</label>
            <capacities>
              <li>Cut</li>
            </capacities>
            <power>18</power>
            <armorPenetration>0.60</armorPenetration>
            <cooldownTime>2</cooldownTime>
            <extraMeleeDamages>
                <li>
                <def>Flame</def>
                <amount>18</amount>
                <chance>0.6</chance> <!-- May need to change chance and damage value -->
                </li>
            </extraMeleeDamages>
          </li>
        </tools>
        <recipeMaker>
          <researchPrerequisite>ProtonMeleeGenOne</researchPrerequisite>
          <skillRequirements>
            <Crafting>6</Crafting>
          </skillRequirements>
          <displayPriority>410</displayPriority>
        </recipeMaker>
      </ThingDef>
    
